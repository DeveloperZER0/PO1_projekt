<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.healthtracker.ui.components.MeasurementFormController"
           styleClass="measurement-form-container"
           stylesheets="@styles/style.css">

    <!-- Header -->
    <top>
        <VBox styleClass="form-header">
            <Label text="Dodaj pomiary" styleClass="form-title"/>
            <Label text="Wybierz parametry które chcesz zmierzyć" styleClass="form-subtitle"/>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="form-scroll-pane">
            <VBox spacing="20" styleClass="form-content">
                
                <!-- Weight Section -->
                <VBox styleClass="measurement-section">
                    <Label text="Waga" styleClass="section-title"/>
                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="measurement-row">
                        <CheckBox fx:id="weightCheck" styleClass="measurement-checkbox"/>
                        <VBox spacing="5">
                            <TextField fx:id="weightField" promptText="Wprowadź wagę w kg" 
                                     styleClass="measurement-field" disable="true"/>
                            <Label text="kg" styleClass="unit-label"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Heart Rate Section -->
                <VBox styleClass="measurement-section">
                    <Label text="Tętno" styleClass="section-title"/>
                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="measurement-row">
                        <CheckBox fx:id="hrCheck" styleClass="measurement-checkbox"/>
                        <VBox spacing="5">
                            <TextField fx:id="hrField" promptText="Wprowadź tętno" 
                                     styleClass="measurement-field" disable="true"/>
                            <Label text="uderzeń/min" styleClass="unit-label"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Blood Pressure Section -->
                <VBox styleClass="measurement-section">
                    <Label text="Ciśnienie krwi" styleClass="section-title"/>
                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="measurement-row">
                        <CheckBox fx:id="bpCheck" styleClass="measurement-checkbox"/>
                        <HBox spacing="10">
                            <VBox spacing="5">
                                <TextField fx:id="systolicField" promptText="Skurczowe" 
                                         styleClass="measurement-field bp-field" disable="true"/>
                                <Label text="mmHg" styleClass="unit-label"/>
                            </VBox>
                            <Label text="/" styleClass="bp-separator"/>
                            <VBox spacing="5">
                                <TextField fx:id="diastolicField" promptText="Rozkurczowe" 
                                         styleClass="measurement-field bp-field" disable="true"/>
                                <Label text="mmHg" styleClass="unit-label"/>
                            </VBox>
                        </HBox>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Footer with buttons -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" styleClass="form-footer">
            <Button text="Zapisz pomiary" fx:id="saveButton" onAction="#onSaveClicked" 
                   styleClass="primary-btn"/>
            <Button text="Anuluj" onAction="#onCancelClicked" 
                   styleClass="secondary-btn"/>
        </HBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.healthtracker.ui.components.MealFormController"
           styleClass="form-container"
           stylesheets="@styles/style.css">

    <top>
        <VBox styleClass="form-header">
            <Label text="Dodaj posiłek" styleClass="form-title"/>
            <Label text="Wprowadź dane swojego posiłku" styleClass="form-subtitle"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" styleClass="form-content">
            
            <VBox styleClass="field-group">
                <Label text="Typ posiłku" styleClass="field-label"/>
                <ComboBox fx:id="typeCombo" styleClass="form-field" promptText="Wybierz typ posiłku"/>
            </VBox>
            
            <VBox styleClass="field-group">
                <Label text="Kalorie" styleClass="field-label"/>
                <TextField fx:id="caloriesField" styleClass="form-field" promptText="Wprowadź liczbę kalorii"/>
            </VBox>
            
            <VBox styleClass="field-group">
                <Label text="Opis" styleClass="field-label"/>
                <TextArea fx:id="descriptionField" styleClass="form-field" 
                         promptText="Opisz swój posiłek..." prefRowCount="3"/>
            </VBox>
            
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER" styleClass="form-footer">
            <Button text="Zapisz posiłek" fx:id="saveButton" onAction="#onSaveClicked" 
                   styleClass="primary-btn"/>
            <Button text="Anuluj" onAction="#onCancelClicked" 
                   styleClass="secondary-btn"/>
        </HBox>
    </bottom>

</BorderPane>
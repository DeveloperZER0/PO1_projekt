<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.healthtracker.ui.components.GoalFormController"
           styleClass="form-container"
           stylesheets="@styles/style.css">

    <top>
        <VBox styleClass="form-header">
            <Label text="Cel zdrowotny" styleClass="form-title"/>
            <Label text="Ustaw nowy cel i monitoruj swoje postępy" styleClass="form-subtitle"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" styleClass="form-content">
            
            <VBox styleClass="field-group">
                <Label text="Typ celu" styleClass="field-label"/>
                <ComboBox fx:id="typeCombo" styleClass="form-field" promptText="Wybierz typ celu"/>
            </VBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="10" styleClass="field-group" HBox.hgrow="ALWAYS">
                    <Label text="Wartość docelowa" styleClass="field-label"/>
                    <TextField fx:id="targetField" styleClass="form-field" 
                             promptText="Wprowadź wartość"/>
                </VBox>
                <Label fx:id="unitLabel" text="" styleClass="unit-label"/>
            </HBox>
            
            <VBox styleClass="field-group">
                <Label text="Termin realizacji" styleClass="field-label"/>
                <DatePicker fx:id="dueDatePicker" styleClass="form-field"/>
            </VBox>
            
            <VBox styleClass="field-group">
                <Label text="Opis (opcjonalnie)" styleClass="field-label"/>
                <TextArea fx:id="descriptionField" styleClass="form-field" 
                         prefRowCount="3" wrapText="true"/>
            </VBox>
            
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER" styleClass="form-footer">
            <Button text="Zapisz cel" fx:id="saveButton" onAction="#onSaveClicked" 
                   styleClass="primary-btn"/>
            <Button text="Anuluj" onAction="#onCancelClicked" 
                   styleClass="secondary-btn"/>
        </HBox>
    </bottom>

</BorderPane>
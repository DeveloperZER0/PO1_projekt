<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.healthtracker.ui.AdminDashboardController"
            styleClass="main-container">

    <top>
        <VBox spacing="10" styleClass="header-section">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
            
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="🛡️ Panel Administratora" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="🔄 Odśwież" onAction="#onRefreshClicked" styleClass="secondary-button"/>
                <Button text="👤 Mój dashboard" onAction="#onBackToDashboardClicked" styleClass="secondary-button"/>
                <Button text="🚪 Wyloguj" onAction="#onLogoutClicked" styleClass="logout-button"/>
            </HBox>
            
            <HBox spacing="30" alignment="CENTER_LEFT" styleClass="stats-container">
                <Label fx:id="totalUsersLabel" text="Łącznie użytkowników: 0" styleClass="stat-label"/>
                <Label fx:id="regularUsersLabel" text="Zwykli użytkownicy: 0" styleClass="stat-label"/>
                <Label fx:id="adminUsersLabel" text="Administratorzy: 0" styleClass="stat-label"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" styleClass="content-section">
            <padding><Insets top="10" right="15" bottom="15" left="15"/></padding>
            
            <Label text="📋 Lista użytkowników (dwuklik = szczegóły)" styleClass="section-title"/>
            
            <TableView fx:id="userTable" styleClass="data-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" styleClass="center-aligned"/>
                    <TableColumn fx:id="usernameColumn" text="Login"/>
                    <TableColumn fx:id="emailColumn" text="E-mail"/>
                    <TableColumn fx:id="roleColumn" text="Rola" styleClass="center-aligned"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="footer-section">
            <padding><Insets top="10" right="15" bottom="10" left="15"/></padding>
            <Label text="💡 Podpowiedź: Kliknij prawym przyciskiem na użytkownika, aby zobaczyć opcje" 
                   styleClass="hint-text"/>
        </HBox>
    </bottom>

</BorderPane>
